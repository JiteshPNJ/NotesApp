<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".presentation.SimpleNotesDetailFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNoteDetailEditableTitle"
        android:hint="@string/title"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="56dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNoteDetailEditableContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/type_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNoteDetailEditableTitle"
        android:gravity="top"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        tools:text="Simple Notes Content" />


</androidx.constraintlayout.widget.ConstraintLayout>